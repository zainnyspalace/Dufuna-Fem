{
    "name": "modupe/publishing_house",
    "description": "Simple slim api",
    "require": {
        "slim/slim": "4.*",
        "slim/psr7": "^1.3",
        "php-di/php-di": "^6.3",
        "vlucas/phpdotenv": "^5.3",
        "illuminate/database": "^8.29"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    }, 
    "autoload": {
        "psr-4": {
            "DB\\": "database",
            "App\\Controller\\": "app/controllers",
            "App\\Middleware\\": "app/middlewares",
            "App\\Model\\": "app/models"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public"
    }
}
